<html>
  <head>
    <title>Psico</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
     <script>
         $(function() {
         $( "#datepicker" ).datepicker();
         });
      </script>  </head>
   <%= csrf_meta_tags %> 
  
  <body role="document">

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  
  
      <div class="collapse navbar-collapse">
        
        <ul class="nav navbar-nav">
          <li><%= link_to "Psico", root_url, style: "color:#CCFF33;font-weight:200;", class:"navbar-brand" %></li>
          <li><%= link_to "Pacientes", pacientes_url, class:"navbar-brand" %></li>
          <li><%= link_to "Internações", internados_url, class:"navbar-brand" %></li>
          <li><%= link_to "Altas", altas_url, class:"navbar-brand" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle navbar-brand" data-toggle="dropdown">Atendimentos<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Evolução", evolucaos_url %></li>
            </ul>
           </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle navbar-brand" data-toggle="dropdown">Configurações <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Tipos de Evoluções", evolucao_tipos_url %></li>
            </ul>
           </li>
        </ul>
        <div class="col-sm-3 col-md-3 pull-right">
          <div class="navbar-brand">Paciente</div>
          <form class="navbar-form" role="search" action="/pacientes" method="get">
            <div class="input-group">
               <%= text_field_tag :paciente_filtro, params[:paciente_filtro], class: "form-control", style: "height:24px", placeholder: "Procurar..."  %>
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>
 
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span12">
          <% if user_signed_in? %>
            <span class="icon-user"> <%= current_user.email %></span>
            <%= link_to "Desconectar", destroy_user_session_path, :id => 'nav2-logout' , :title => "Sair do sistema"%>
            <%= render_breadcrumbs %>
          <% end %> 
          <%= bootstrap_flash %>
          <%= yield %>
        </div>
      </div><!--/row-->
    </div> <!-- /container -->

  </body>
</html>
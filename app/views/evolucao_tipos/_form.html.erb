<%= simple_form_for @evolucao_tipo do |f| %>

  <%= f.input :nome, placeholder: 'nome' %>

  <%= f.input :inativo, label: 'Marca tipo de evolução como inativa' %>

  <%= f.simple_fields_for :campos, @campos do |builder| %>
    <%= render 'campo_fields', f: builder %>
  <% end %>

  <%= link_to_add_fields "Adiciona Campo", f, :campos %>
  <br>
  <br>
  <%= f.submit "Gravar", :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                evolucao_tipos_path, :class => 'btn' %>
<% end %>


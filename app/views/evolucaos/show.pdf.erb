<%- model_class = Evolucao -%>
<div class="page-header">
  <b>HOSPITAL SÃO ROQUE SOCIEDADE BENEFICIENTE</b>
  <br>Rua Frei João Evangelista No. 450, Luzerna/SC
  <br>CNPJ 75.444.471/0001-98   Fone (49)3523-1133
  <hr>
  <p><h3><%= @evolucao.evolucao_tipo.nome %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:paciente_id) %>:</strong></dt>
  <dd><%= @evolucao.paciente.nome_e_id %></dd>
</dl>

<dl class="">
  <% @evolucao.evolucao_tipo.campos.order(:nome).each do |campo| %>
      <% if campo.titulo[0].in? '01' %>
        <p>
      <% end %>
      <% if campo.tipo_campo == 'check_box' %>
        <% if @evolucao.propriedades[campo.nome] == '1' %>
          <dd>-<%= campo.titulo %></dd>
        <% end %>   
      <% else %>
        <dt><strong><%= campo.titulo %></strong></dt>
        <dd><%= simple_format(@evolucao.propriedades[campo.nome]) %></dd>
      <% end %>
  <% end %>
</dl>

